{% set navPages = collections.all | eleventyNavigation %}

<nav aria-label="main navigation" class="nav">
	<a class="nav__item screenreader-text" href="#main-content">Skip to content</a>
    <ul role="list" class="nav__menu nav__center">
        {%- for entry in navPages %}
            {# <li {% if entry.url == page.url %} class="active" {% endif %}> #}
            <li class="nav__item {% if entry.url == page.url %} active {% endif %}">
                <a href="{{ entry.url | url }}">{{ entry.title }}</a>
            </li>
        {%- endfor %}
    </ul>
</nav>